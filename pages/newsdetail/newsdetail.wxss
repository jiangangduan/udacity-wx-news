/* pages/newsdetail/newsdetail.wxss */
.newsdetail-wrapper {
  border-top: 1px solid rgba(0, 0, 0, 0.1);
  width: 700rpx;  
  position: relative;
  padding-top: 20rpx;
  margin-left: 25rpx;
}

.newsdetail-title {  
  font-size: 40rpx;
  line-height: 56rpx;
  margin-bottom: 10rpx;
  font-weight: bold;
}

.newsdetail-subtitle {
  position: relative;
  width: 700rpx;
  font-size: 25rpx;
  line-height: 35rpx;
  margin-top: 35rpx;
  margin-bottom: 30rpx;
  font-weight: normal;
  display: flex;
  flex-direction: row;
}

.newsdetail-subtitle-source {
  width: 200rpx;  
  text-align:left;
}

.newsdetail-subtitle-time {
  width: 300rpx;
  text-align: left;
}

.newsdetail-subtitle-readcount {
  position: absolute;
  right: 0;
  width: 200rpx;
  text-align: right;  
}

.newsdetail-content-wrapper {
  width: 700rpx;
  display: flex;
  flex-direction: column;
  flex-wrap: wrap;
  position: relative;
}

.newsdetail-image {
  width: 700rpx;
  height: 500rpx;
}

.newsdetail-content {
  width: 700rpx;
  margin-bottom: 15rpx;
}

.newsdetail-regular-text {
  font-size: 34rpx;
  line-height: 48rpx;
  font-weight: normal;
}

.newsdetail-strong-text {
  font-size: 34rpx;
  line-height: 48rpx;
  font-weight: bold;
}