/**index.wxss**/

.newslist-wrapper {
  position: relative;
  padding-top: 20rpx;
  padding-left: 25rpx;
  height: 700rpx;
}

.newslist {
  display: flex;
  flex-direction: column;
}

.newslist-item {
  display: flex;
  height: 220rpx;
  width: 700rpx;
  flex-shrink: 0;
  align-items: center;
  border-top: 1px solid rgba(0, 0, 0, 0.1);
}

.newslist-left-box {
  width: 500rpx;
  padding-right: 10rpx;
}

.newslist-right-box {
  width: 200rpx;
}

.newslist-title {
  font-size: 35rpx;
  line-height: 49rpx;
}

.newslist-source-date {
  margin-top: 10rpx;
  display: flex;
  font-size: 25rpx;
  line-height: 35rpx;
}

.newslist-source {
  width: 200rpx;
}

.newslist-image {
  width: 180rpx;
  height: 180rpx;
}
